---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import noughtsAndCrossesImage from "../images/noughts-and-crosses.png";
import playdateBadge from "../images/playdate-badge-download.png";
---

<Layout title="Lachlan Ridley">
  <p class="intro">hiya! I'm Lachlan, and this is my little internet corner</p>
  <div class="centre">
    <Card>
      <a href="https://lachlan-ridley.itch.io/noughts-and-crosses">
        <h1 class="noughts-and-crosses">Noughts + Crosses</h1>
        <div class="noughts-image">a</div>
        <img
          class="playdate-badge"
          src={playdateBadge.src}
          alt="A badge which reads Download for Playdate"
        />
      </a>
    </Card>

    <Card alt>
      <h1>love me! <span class="hearts">‚ù§Ô∏èüíúüíö</span></h1>
      <ul class="love-links">
        <!-- <li><a href="resume">R√©sum√©</a></li> -->
        <li><a href="https://github.com/LachlanRidley">GitHub</a></li>
        <li><a href="https://cloudisland.nz/@lachlan_ridley">Mastodon</a></li>
      </ul>
    </Card>
  </div>
</Layout>

<style
  define:vars={{
    bgImage: `url(${noughtsAndCrossesImage.src})`,
  }}
>
  .intro {
    width: 60%;
    margin: auto;
    font-size: 1.5rem;
  }

  .hearts {
    font-size: 1.5rem;
  }

  .centre {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .noughts-and-crosses {
    font-style: normal;
    font-size: 2.3rem;
    font-weight: bold;
  }

  .noughts-image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    height: 120%;
    /* background-image: var(--bgImage) !important; */
    background-blend-mode: multiply;
    background-color: #cfff70;
  }

  .playdate-badge {
    position: absolute;
    bottom: 1.5rem;
    right: 2rem;
    width: 40%;
  }

  .love-links {
    list-style-type: none;
    padding: 0;
    margin: 0;

    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
</style>
