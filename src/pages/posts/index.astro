---
import Layout from "../../layouts/Layout.astro";

const posts = await Astro.glob('./*.md');
---

<Layout title="Lachlan Ridley - Posts">
  <main>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </main>

  <style>
    main {
      display: flex;
      flex-direction: column;
      align-items: center;

      min-height: 100vh;
      padding-top: 1rem;
    }
  </style>
</Layout>
